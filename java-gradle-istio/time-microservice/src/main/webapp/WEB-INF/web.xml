<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<display-name>Time Microservice</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
  <!-- Jersey + HK2 + GUICE Binding Routing Config  -->
    <servlet>
        <servlet-name>JerseyGuiceRouter</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>      
           <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>com.github.diegopacheco.istio.microservices.time.rest.config.AppResourceConfig</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
   <servlet-mapping>
        <servlet-name>JerseyGuiceRouter</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

</web-app>